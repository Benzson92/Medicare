<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal|center">

            <ImageView
                android:id="@+id/med_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/pill_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/med_name"
                android:layout_toRightOf="@+id/med_photo"
                android:layout_alignParentTop="true"
                android:textSize="28sp"
                android:text="Prograf"
                android:layout_toEndOf="@+id/med_photo"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/med_dose"
                android:layout_toRightOf="@+id/med_photo"
                android:layout_below="@+id/med_name"
                android:text="1 tablet"
                android:layout_toEndOf="@+id/med_photo"
                android:layout_alignStart="@+id/med_name"
                android:layout_alignLeft="@id/med_name"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="08.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/med_time"
                android:textSize="24sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>