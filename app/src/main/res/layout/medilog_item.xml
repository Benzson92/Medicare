<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_centerVertical="true">

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/item_photo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Prograf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/item_name"
        android:layout_alignTop="@+id/item_photo"
        android:layout_toRightOf="@+id/item_photo"
        android:layout_toEndOf="@+id/item_photo"
        android:layout_marginTop="5dp"
        android:textSize="18sp" />

    <TextView
        android:text="0.5 mg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name"
        android:layout_alignLeft="@+id/item_name"
        android:layout_alignStart="@+id/item_name"
        android:id="@+id/item_dose"
        android:textSize="18sp" />

    <TextView
        android:text="08.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/item_time"
        android:textSize="18sp"
        android:layout_marginEnd="55dp"
        android:layout_marginLeft="55dp" />

    <TextView
        android:text="Wed 18 Jan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_date"
        android:layout_alignLeft="@+id/item_time"
        android:layout_alignStart="@+id/item_time"
        android:layout_below="@+id/item_time"
        android:textSize="18sp" />

</RelativeLayout>